{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build - packages/extension",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Run Extension (Watch Mode)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: dev - packages/extension",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
                "--extensionTestsPath=${workspaceFolder}/packages/extension/dist/test/suite/index"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build - packages/extension",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "E2E: Run Extension Only",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
                "${workspaceFolder}/../bctb-e2e-test-workspace"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build - packages/extension",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "BCTB_E2E_TEST_MODE": "true"
            }
        },
        {
            "name": "Debug MCP Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/packages/mcp/dist/server.js",
            "cwd": "${workspaceFolder}/packages/mcp",
            "outFiles": [
                "${workspaceFolder}/packages/mcp/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build - packages/mcp",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "BCTB_WORKSPACE_PATH": "${workspaceFolder}",
                "BCTB_MODE": "http",
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Debug MCP Server (No Config)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/packages/mcp/dist/server.js",
            "cwd": "${workspaceFolder}/packages/mcp",
            "outFiles": [
                "${workspaceFolder}/packages/mcp/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build - packages/mcp",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "BCTB_WORKSPACE_PATH": "${workspaceFolder}/packages/mcp",
                "BCTB_MODE": "http",
                "NODE_ENV": "development",
                "BCTB_APP_INSIGHTS_ID": "",
                "BCTB_KUSTO_URL": "",
                "BCTB_TENANT_ID": ""
            },
            "console": "integratedTerminal",
            "presentation": {
                "group": "MCP Debug",
                "order": 2
            }
        }
    ],
    "compounds": [
        {
            "name": "Extension + MCP Server",
            "configurations": [
                "Run Extension",
                "Debug MCP Server"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 1
            }
        },
        {
            "name": "E2E: Extension (Dev) + MCP (NPM)",
            "configurations": [
                "E2E: Run Extension Only"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "E2E Testing",
                "order": 2
            }
        }
    ]
}