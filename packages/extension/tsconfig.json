{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node10",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "ES2022"
        ],
        "sourceMap": true,
        "declaration": false,
        "declarationMap": false,
        "composite": false,
        "paths": {
            "@bctb/shared": [
                "../shared/src/index.ts"
            ],
            "@bctb/shared/*": [
                "../shared/src/*"
            ]
        }
    },
    "references": [
        {
            "path": "../shared"
        }
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out"
    ]
}