{
    "name": "@bctb/mcp",
    "version": "0.1.0",
    "description": "MCP backend server for BC Telemetry Buddy",
    "type": "commonjs",
    "main": "./dist/server.js",
    "types": "./dist/server.d.ts",
    "scripts": {
        "build": "esbuild src/server.ts --bundle --outfile=dist/server.js --platform=node --format=cjs --sourcemap --minify --external:fsevents && node -e \"require('fs').copyFileSync('launcher.js', 'dist/launcher.js')\"",
        "dev": "esbuild src/server.ts --bundle --outfile=dist/server.js --platform=node --format=cjs --sourcemap --watch",
        "compile": "tsc --noEmit",
        "start": "node dist/server.js",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "@azure/msal-node": "^3.8.0",
        "axios": "^1.6.0",
        "express": "^5.1.0",
        "lru-cache": "^10.1.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.18.11",
        "esbuild": "^0.24.0",
        "jest": "^30.2.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.4.5",
        "typescript": "^5.3.0"
    }
}
