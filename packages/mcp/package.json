{
    "name": "bc-telemetry-buddy-mcp",
    "version": "1.0.0",
    "description": "Model Context Protocol server for Business Central telemetry",
    "type": "commonjs",
    "main": "./dist/server.js",
    "types": "./dist/server.d.ts",
    "bin": {
        "bctb-mcp": "./dist/cli.js"
    },
    "scripts": {
        "build": "npm run build:shared && npm run build:server && npm run build:cli",
        "build:shared": "cd ../shared && npm run build",
        "build:server": "esbuild src/server.ts --bundle --outfile=dist/server.js --platform=node --format=cjs --sourcemap --minify",
        "build:cli": "esbuild src/cli.ts --bundle --outfile=dist/cli.js --platform=node --format=cjs --sourcemap --minify --banner:js=\"#!/usr/bin/env node\"",
        "dev": "tsc --build --watch",
        "compile": "tsc --noEmit",
        "start": "node dist/server.js",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "commander": "^12.0.0",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@bctb/shared": "file:../shared",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.18.11",
        "esbuild": "^0.24.0",
        "jest": "^30.2.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.4.5",
        "typescript": "^5.3.0"
    }
}